{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "monorepo": true,
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "assets": ["**/*.!(ts)", ".env"],
        "watchAssets": true,
        "webpack": false
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json",
        "assets": [".env"],
        "watchAssets": true
      }
    },
    "document-editor-service": {
      "type": "application",
      "root": "apps/document-editor-service",
      "entryFile": "main",
      "sourceRoot": "apps/document-editor-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/document-editor-service/tsconfig.app.json",
        "assets": [".env"],
        "watchAssets": true
      }
    },
    "forum-and-notification-service": {
      "type": "application",
      "root": "apps/forum-and-notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/forum-and-notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/forum-and-notification-service/tsconfig.app.json",
        "assets": [".env"],
        "watchAssets": true
      }
    },
    "quiz-service": {
      "type": "application",
      "root": "apps/quiz-service",
      "entryFile": "main",
      "sourceRoot": "apps/quiz-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/quiz-service/tsconfig.app.json",
        "assets": [".env"],
        "watchAssets": true
      }
    },
    "workspaces-service": {
      "type": "application",
      "root": "apps/workspaces-service",
      "entryFile": "main",
      "sourceRoot": "apps/workspaces-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/workspaces-service/tsconfig.app.json"
      }
    },
    "resource-service": {
      "type": "application",
      "root": "apps/resource-service",
      "entryFile": "main",
      "sourceRoot": "apps/resource-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/resource-service/tsconfig.app.json",
        "assets": [".env"],
        "watchAssets": true
      }
    }
  }
}
